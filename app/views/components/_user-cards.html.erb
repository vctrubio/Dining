  <% restaurants.each do |restaurant| %>
  <div class="col-sm-12 col-sm-6 col-lg-12" id="card <%= restaurant.id %>" >
    <%= link_to restaurant_path(restaurant) do %>
    <div class="user-card-trip">
      <%= cl_image_tag restaurant.photo, :transformation => {:dpr => "auto",:quality => :auto, :responsive => true, :width => "auto" , :fetch_format=>:auto}, responsive_breakpoints: { create_derived: true, bytes_step: 20000, min_width: 200, max_width: 1000 }%>
    </div>
    <% end %>
  </div>
  <% end %>
