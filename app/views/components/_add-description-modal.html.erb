<!-- Modal -->
<div class="modal fade" id="add-reservation" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <% if @restaurant.description.nil? %>
        <h5 class="modal-title" id="exampleModalLabel">Add a Description</h5>
        <% else %>
           <h5 class="modal-title" id="exampleModalLabel">Edit your Description</h5>
        <% end %>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <%= simple_form_for [@restaurant] do |f| %>
       <%= f.input :description,  :input_html => { 'rows' => 4, maxlength: 239} %>
       <%= f.submit :class => "btn btn-primary" %>
       <% end %>
     </div>
  </div>
</div>
</div>
