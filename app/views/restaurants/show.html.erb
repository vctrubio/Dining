<%= render 'components/modal-reserve' %>

<div class="container restaurant-show">
<div class="contact1">
  <div class="container-contact1">
  <%= cl_image_tag @restaurant.photo, :class => "restaurant-photo" %>

  <div class="non_pic_content">
    <div class="restaurant-content">
      <div class="name-photo">
      <h1><%= @restaurant.name %></h1>
        <%= link_to (cl_image_tag @restaurant.user.photo, class: "avatar-hosted"), user_path(@restaurant.user) %>
      </div>
      <h2>Location: <%= @restaurant.location %></h2>
      <h3>Seats available: <span class="res-capacity"> <%= @restaurant.capacity %></span></h3>
      <h3>Open from: <%= @restaurant.open_hour %>h to <%= @restaurant.close_hour %></h3>


      <% if current_user.reservations.where(restaurant_id: @restaurant.id).empty?  %>
      <button type="button" class="btn btn-primary" id="modal-trigger">Make a reservation!</button>
      <% elsif !@user_reservation.rating %>
      <%= simple_form_for (@user_reservation) do |f| %>
      <%= f.input :rating, collection: (1..5).to_a %>
      <%= f.submit value: "Add your rating" %>
      <% end %>
      <% else %>
      <div class="reviews">
        <div id="stars">
          <% current_user.reservations.each do |reservation| %>
          <% reservation.rating %>
          <% end %>
          <% if rating = @restaurant.average_rating %>
          <% rating.round.times do %>
          <i class="fas fa-star"></i>
          <% end %>
          <% end %>
        </div>
        <% end %>
      </div>

      <% if current_user == @restaurant.user %>
        <%= link_to "destroy me", restaurant_path(@restaurant), method: 'delete'  %>
      <% end %>
  </div>
  </div>
</div>

</div>

